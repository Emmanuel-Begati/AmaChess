{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "frontend-dev",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"options": {
				"cwd": "${workspaceFolder}/amachess-frontend"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "backend-start",
			"type": "shell",
			"command": "node",
			"args": [
				"src/server.js"
			],
			"options": {
				"cwd": "${workspaceFolder}/amachess-backend"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		}
	]
}